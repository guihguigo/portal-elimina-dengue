<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#43f1e9f0"
    >

    <ImageView
        android:id="@+id/imgIconFoco"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/txtNmFoco"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgIconFoco"
        android:layout_alignTop="@+id/imgIconFoco"
        android:text="Título"
        android:textSize="22sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/txtPeriodicidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNmFoco"
        android:layout_toRightOf="@+id/imgIconFoco"
        android:text="Descrição"
        android:textSize="15sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:layout_marginTop="7dp"
        />

    <CheckBox
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ckbAdd"
        android:background="@drawable/ckb_add_foco"
        android:layout_alignParentTop="true"
        android:button="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

