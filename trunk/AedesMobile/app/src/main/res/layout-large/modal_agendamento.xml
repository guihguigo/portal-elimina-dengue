<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420sp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:layout_marginBottom="20sp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Agendar Prevenção"
            android:textSize="32sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="15sp"
            android:id="@+id/textView" />
        <Button
            android:id="@+id/btnAddFoco"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="@drawable/add"
            android:layout_marginLeft="15sp"
            android:layout_gravity="right"
            android:layout_marginRight="30sp"
            android:layout_below="@+id/image"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15sp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgFocoIcon"
            android:layout_width="200sp"
            android:layout_height="140sp"
            android:paddingRight="10sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtNmFoco"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Titulo"
                android:textSize="32sp"
                android:layout_toRightOf="@+id/image"
                android:layout_weight="1.50" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Periodicidade:"
        android:layout_marginLeft="15sp"
        android:id="@+id/txtPeriodicidade" />

    <TextView
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="15sp"
        android:text="Modo de prevenção:"
        android:textSize="28sp"
        android:id="@+id/txtGeneric" />

    <TextView
        android:layout_marginTop="5sp"
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Passos de como realizar prevenção"
        android:textSize="24sp"
        android:id="@+id/txtComoLimpar" />


</LinearLayout>