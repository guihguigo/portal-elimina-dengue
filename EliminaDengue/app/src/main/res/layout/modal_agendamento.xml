<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="510sp"
    android:layout_height="400sp"
    android:layout_marginTop="24sp"
    android:layout_marginLeft="24sp"
    android:layout_marginRight="24sp"
    android:layout_marginBottom="24sp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Agendar Prevenção"
        android:textSize="30sp"
        android:layout_marginBottom="40sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgFocoIcon"
            android:layout_width="230sp"
            android:layout_height="180sp"
            android:paddingRight="15sp"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtNmFoco"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Titulo"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/image"
                android:layout_weight="1.50" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Periodicidade:"
                android:id="@+id/txtPeriodicidade" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddFoco"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:background="@drawable/add"
            android:layout_marginLeft="15sp"
            android:layout_gravity="right"
            android:layout_marginRight="30sp"
            android:layout_below="@+id/image"
            />



    </LinearLayout>
    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Modo de prevenção:"
        android:textSize="25sp"
        android:id="@+id/txtGeneric" />

    <TextView
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Passos de como realizar prevenção"
        android:id="@+id/txtComoLimpar" />


</LinearLayout>